<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:gravity="center_horizontal" android:orientation="vertical">

    <ImageView
        android:id="@+id/item_header_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="10sp" android:layout_marginBottom="5sp"/>

    <TextView
        android:id="@+id/item_header_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="15sp" android:textStyle="bold" android:layout_marginBottom="10sp"/>

</LinearLayout>